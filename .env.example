# STT Microservice Environment Configuration

# Application Settings
APP_ENV=dev
APP_LOG_LEVEL=INFO

# Azure AI Foundry / Speech Services
# Note: These are set automatically by `make provision`
STT_AZURE_SPEECH_RESOURCE_NAME=your-ai-foundry-resource-name
STT_AZURE_SPEECH_REGION=eastus

# STT Limits
STT_MAX_FILE_SIZE_MB=100
STT_MAX_DURATION_MINUTES=120

# Process Isolation Feature Flag
# Set to false to completely disable the /transcriptions/process-isolated endpoint
# and prevent worker process creation. Useful for testing the /sync endpoint in isolation.
ENABLE_PROCESS_ISOLATED=true

# Process Isolation Settings (only used when ENABLE_PROCESS_ISOLATED=true)
PROCESS_POOL_SIZE=12
PROCESS_TIMEOUT=300
